<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://scemas.android.com/tools"
tools:context=".MainActivity"
android:layout_height="match_parent"
android:layout_width="match_parent">

 <ImageView
        android:id="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="270dp"
        android:src="@drawable/udacity" />

<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:textSize="16sp"
    android:fontFamily="TimesNewRoman"
    android:textColor="@android:color/darker_gray"
    android:layout_margin="10dp"
    android:layout_centerVertical="true"
    android:text=" Udacity!"
    />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text4"
        android:textSize="16sp"
        android:fontFamily="TimesNewRoman"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="10dp"
        android:text="2465 Latham St Mountain View, CA 94043"
     />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text1"
        android:textSize="16sp"
        android:fontFamily="TimesNewRoman"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="10dp"
        android:text=" 650-555-5555"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text3"
        android:textSize="16sp"
        android:fontFamily="TimesNewRoman"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="10dp"
        android:text="www.udacity.com"
        />

</RelativeLayout>