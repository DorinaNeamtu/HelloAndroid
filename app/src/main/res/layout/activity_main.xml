<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
      android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical" >

        <ImageView
            android:id="@+id/im1"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/udacity" />

<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:textSize="16sp"
    android:textStyle="bold"
    android:fontFamily="TimesNewRoman"
    android:textColor="#08088A"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="25dp"
    android:layout_centerVertical="true"
    android:text=" Udacity!"
    />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text4"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="TimesNewRoman"
        android:textColor="#08088A"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="2465 Latham St Mountain View, CA 94043"
     />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text1"
        android:textSize="16sp"
        android:fontFamily="TimesNewRoman"
        android:textStyle="bold"
        android:textColor="#08088A"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text=" 650-555-5555"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text3"
        android:textSize="16sp"
        android:fontFamily="TimesNewRoman"
        android:textStyle="bold"
        android:textColor="#08088A"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="www.udacity.com"
        />

    </LinearLayout>
</ScrollView>